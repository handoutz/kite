<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hatch.kite"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/kite_mini"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.hatch.kite.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hatch.kite.LoginActivity"
            android:label="Kite Login"></activity>
        <activity
                android:name=".AppListActivity"
                android:label="App List"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>
        <activity android:name=".RegisterActivity"/>
        <activity android:name=".AppDetailActivity"/>
        <activity android:name=".AppMockupActivity"/>
        <activity android:name=".UserProfileActivity"/>
    </application>

</manifest>
